{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 2
  },
  "configurePresets": [
    {
      "name": "base",
      "description": "Sets Ninja generator, build and install directory",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "cacheVariables": {
        "build_tests": "ON"
      }
    },
    {
      "name": "linux-base",
      "displayName": "Linux base",
      "description": "Sets compilers",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "linux-x64-debug",
      "displayName": "Linux x64 debug",
      "description": "Sets debug build type",
      "inherits": "linux-base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-x64-release",
      "displayName": "Linux x64 release",
      "description": "Sets release build type",
      "inherits": "linux-x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-x64-debug",
      "displayName": "Default",
      "configurePreset": "linux-x64-debug",
      "description": "Vanilla build"
    },
    {
      "name": "linux-x64-debug-verbose",
      "displayName": "Verbose Build",
      "description": "Passes -v to Ninja",
      "configurePreset": "linux-x64-debug",
      "nativeToolOptions": [
        "-v"
      ]
    },
    {
      "name": "linux-x64-release",
      "displayName": "Default",
      "configurePreset": "linux-x64-release",
      "description": "Vanilla build"
    },
    {
      "name": "linux-x64-release-verbose",
      "displayName": "Verbose Build",
      "description": "Passes -v to Ninja",
      "configurePreset": "linux-x64-release",
      "nativeToolOptions": [
        "-v"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "linux-x64-debug",
      "description": "Enable output on failure",
      "configurePreset": "linux-x64-debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "linux-x64-release",
      "description": "Enable output on failure",
      "configurePreset": "linux-x64-release",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}